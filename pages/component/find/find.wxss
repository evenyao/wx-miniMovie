.search-area {
  display: flex;
  flex-direction: row;
  position: relative;
  margin: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #ddd;
}
.search-area input {
  width: calc(100% - 150rpx);
  padding: 16rpx;
  background: #eee;
  border: none;
  border-radius: 8rpx;
  box-shadow: none;
  outline: none;
  font-size: 28rpx;
}
.search-area .button {
  position: absolute;
  right: 0;
  padding: 20rpx 30rpx 20rpx 30rpx;
  background: #ff5722;
  color: #fff;
  font-size: 28rpx;
  font-weight: bold;
  border-radius: 8rpx;
}

.waiting_img {
  position: relative;
  top: -30rpx;
}

.item {
  margin: 0 20rpx;
  border-bottom: 1rpx solid #ccc;
  padding: 20rpx 0;
}
.item .link {
  display: flex;
}
.item .cover,
.item .cover .img {
  width: 168rpx;
  height: 252rpx;
}
.item .detail {
  flex: 1;
  padding-left: 20rpx;
}
.item .detail .name {
  font-size: 30rpx;
}
.item .detail .extra {
  color: #999;
  margin-top: 4rpx;
  font-size: 28rpx;
}
.item .detail .score {
  color: #ff5722;
}