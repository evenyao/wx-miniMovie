/* pages/detail/detail.wxss */
.movie-name {
  font-size: 50rpx;
  padding: 30rpx;
}

.point {
  font-size: 40rpx;
  color: #ff5722;
}
.comment {
  margin-bottom: 20rpx;
}
.comment .stars-point {
  display: flex;
  flex-direction: row;
  vertical-align: middle;
  padding-bottom: 10rpx;
}
.comment .star {
  width: 28rpx;
  height: 28rpx;
}

.comment-number {
  font-size: 28rpx;
  color: #999;
}

.member-info {
  font-size: 28rpx;
  padding-right: 20rpx;
}

.cover {
  width: 240rpx;
  height: 360rpx;
}
.cover .img {
  width: 100%;
  height: 100%;
}

.detail {
  padding: 0 30rpx 30rpx 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.info {
  display: flex;
  flex-direction: column;
  width: 440rpx;
}

.cover {
  flex: 1;
}

.story {
  font-size: 24rpx;
  margin: 10rpx 30rpx 0rpx 30rpx;
}

.block-title {
  font-size: 36rpx;
  margin-bottom: 10rpx;
  padding-left: 15rpx;
  border-left: 5px solid #1296db;
}
.showbutton {
  display: flex;
  justify-content: flex-end;
  margin-right: 30rpx;
  font-size: 24rpx;
  color: #999;
  padding: 10rpx;
}

.comments-item {
  display: flex;
  background: #FFFFFF;
  margin: 0 30rpx;
  height: 210rpx;
  margin-bottom: 30rpx;
  border-radius: 10rpx;
  box-shadow: 0rpx 0rpx 15rpx 0px rgba(44,49,140,0.31);
}
.userimg {
  border-radius: 10rpx;
  height: 60rpx;
  width: 60rpx;
  margin: 30rpx;
}
.user-comments {
  font-size: 24rpx;
  color: #292929;
  display: -webkit-box; 
  overflow: hidden; 
  -webkit-box-orient: vertical; 
  -webkit-line-clamp: 2;
  width: 530rpx;
  height: 110rpx;
  /* border: 1px solid red; */
}
.comments-title {
  margin-left: 30rpx;
  margin-bottom: 20rpx;
}
.comments-info {
  display: flex;
  flex-direction: column;
  /* border: 1px solid pink; */
}
.userid {
  font-size: 24rpx;
  color: #292929;
  vertical-align: middle;
  /* border: 1px solid blue; */
}
.icon {
  width: 25rpx;
  height: 25rpx;
  vertical-align: middle;
  margin-left: 10rpx;
  /* border: 1px solid blue; */
}
.whosay { 
  display: flex;
  align-items: center;
  vertical-align: middle;
  margin-top: 30rpx;
  margin-bottom: 20rpx;
}
.comments .stars-point {
  display: flex;
  position: relative;
  vertical-align: middle;
  margin-top: 20rpx;
  margin-bottom: 30rpx;
}
.comments .star {
  width: 20rpx;
  height: 20rpx;
}

.videos {
  margin-top: 20rpx;
  margin-left: 30rpx;
  margin-bottom: 20rpx;
}
.videos-list {
  display: flex;
  flex-direction: row;
  margin-left: 30rpx;
  flex-wrap: wrap;
}
.video-view {
  width: 320rpx;
  height: 220rpx;
  margin-right: 41rpx;
  margin-bottom: 30rpx;
  position: relative;
  border-radius: 10px;
  box-shadow: 0rpx 0rpx 15rpx 0px rgba(44,49,140,0.31);
}

.video-img {
  width: 320rpx;
  height: 220rpx;
  border-radius: 10px;
}

.play-icon {
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
  z-index: 2;
}

.glass-background {
  width: 320rpx;
  height: 220rpx;
  background-color: black;
  opacity: 0.3; 
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
  z-index: 1;
  border-radius: 10px;
}