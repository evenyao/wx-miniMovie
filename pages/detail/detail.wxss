/* pages/detail/detail.wxss */
.movie-name {
  font-size: 50rpx;
  padding: 30rpx;
}

.point {
  font-size: 40rpx;
  color: #ff5722;
}
.comment {
  margin-bottom: 20rpx;
}
.comment .stars-point {
  display: flex;
  flex-direction: row;
  vertical-align: middle;
  padding-bottom: 10rpx;
}
.comment .star {
  width: 28rpx;
  height: 28rpx;
}

.comment-number {
  font-size: 28rpx;
  color: #999;
}

.member-info {
  font-size: 28rpx;
  padding-right: 20rpx;
}

.cover {
  width: 240rpx;
  height: 360rpx;
}
.cover .img {
  width: 100%;
  height: 100%;
}

.detail {
  padding: 0 30rpx 30rpx 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.info {
  display: flex;
  flex-direction: column;
  width: 440rpx;
}

.cover {
  flex: 1;
}